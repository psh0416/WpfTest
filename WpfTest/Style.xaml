<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfTest">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ButtonStyles.xaml"/>
        <ResourceDictionary Source="/ToggleButtonStyles.xaml"/>
        <ResourceDictionary Source="/ProgressBarStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="Button" BasedOn="{StaticResource StandardButton}"/>
    <Style TargetType="ToggleButton" BasedOn="{StaticResource StandardToggleButton}"/>
    <Style TargetType="ProgressBar" BasedOn="{StaticResource StandardProgressBar}"/>
</ResourceDictionary>